<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@HelpWindow.css"/>
            </stylesheets>

            <!-- VBox adds vertical stacking support -->
            <VBox spacing="10" prefWidth="600">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Original horizontal layout: help message + copy button -->
                <HBox alignment="CENTER" fx:id="helpMessageContainer">
                    <children>
                        <Label fx:id="helpMessage" text="Label">
                            <HBox.margin>
                                <Insets right="5.0"/>
                            </HBox.margin>
                        </Label>
                        <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                    </padding>
                </HBox>

                <!-- New collapsible section for command examples -->
                <TitledPane fx:id="commandExamplesPane" text="Command Examples" expanded="false">
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                        <VBox spacing="12">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <!-- ðŸ“¦ Add Command -->
                            <Label text="ðŸ“¦ Add Command" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="addHelp" editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px;
                                        -fx-pref-row-count: 10; -fx-min-height: 180;"
                                      prefRowCount="9">
                            </TextArea>

                            <!-- ðŸ“ Archive Command -->
                            <Label text="ðŸ“ Archive Command" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="archiveHelp" editable="false" wrapText="true" style="-fx-font-family: monospace;
                            -fx-font-size: 13px; -fx-pref-row-count: 10; -fx-min-height: 180;"
                                      prefRowCount="6">
                            </TextArea>

                            <!-- ðŸ§¹ Clear Command -->
                            <Label text="ðŸ§¹ Clear Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                       -fx-min-height: 30;"
                                      prefRowCount="2">
                                clear: Clears all tenants from the address book.
                            </TextArea>

                            <!-- ðŸ› ï¸ Delete Command -->
                            <Label text="ðŸ› ï¸ Delete Command" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="deleteHelp" editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                      -fx-min-height: 180;"
                                      prefRowCount="6">
                            </TextArea>

                            <!-- ðŸ“ Edit Command -->
                            <Label text="ðŸ“ Edit Command" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="editHelp" editable="false" wrapText="true" style="-fx-font-family: monospace;
                            -fx-font-size: 13px; -fx-pref-row-count: 10; -fx-min-height: 180;"
                                      prefRowCount="9">
                            </TextArea>

                            <!-- ðŸ›‘ Exit Command -->
                            <Label text="ðŸ›‘ Exit Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                      -fx-min-height: 30;"
                                      prefRowCount="2">
                                exit: Exits the application.
                            </TextArea>

                            <!-- ðŸ§² Filter Command -->
                            <Label text="ðŸ§² Filter Command" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="filterHelp" editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                      -fx-min-height: 180;"
                                      prefRowCount="7">
                            </TextArea>

                            <!-- ðŸ”Ž Find Command -->
                            <Label text="ðŸ”Ž Find Command" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="findHelp" editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px;
                                            -fx-min-height: 180"
                                      prefRowCount="7">
                            </TextArea>

                            <!-- ðŸ“– Help Command -->
                            <Label text="ðŸ“– Help Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                      -fx-min-height: 30;"
                                      prefRowCount="3">
                                help: Shows program usage instructions.
                            </TextArea>

                            <!-- ðŸ“‹ List Command -->
                            <Label text="ðŸ“‹ List Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true" style="-fx-font-family: monospace;
                            -fx-font-size: 13px; -fx-pref-row-count: 10; -fx-min-height: 30;"
                                      prefRowCount="2">
                                list: Lists all tenants in the address book.
                            </TextArea>

                            <!-- ðŸ—ºï¸ Map Command -->
                            <Label text="ðŸ—ºï¸ Map Command" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="mapHelp" editable="false" wrapText="true" style="-fx-font-family: monospace;
                            -fx-font-size: 13px; -fx-pref-row-count: 10; -fx-min-height: 180;"
                                      prefRowCount="6">
                            </TextArea>
                        </VBox>
                    </ScrollPane>
                </TitledPane>


            </VBox>
        </Scene>
    </scene>
</fx:root>
