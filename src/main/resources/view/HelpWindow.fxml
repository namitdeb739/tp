<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@HelpWindow.css"/>
            </stylesheets>

            <!-- VBox adds vertical stacking support -->
            <VBox spacing="10" prefWidth="600">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- Original horizontal layout: help message + copy button -->
                <HBox alignment="CENTER" fx:id="helpMessageContainer">
                    <children>
                        <Label fx:id="helpMessage" text="Label">
                            <HBox.margin>
                                <Insets right="5.0"/>
                            </HBox.margin>
                        </Label>
                        <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                    </padding>
                </HBox>

                <!-- New collapsible section for command examples -->
                <TitledPane fx:id="commandExamplesPane" text="Command Examples" expanded="false">
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="600" prefViewportHeight="600">
                        <VBox spacing="12" prefHeight="600">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <!-- ðŸ“¦ Add Command -->
                            <Label text="ðŸ“¦ Add Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px;
                                        -fx-pref-row-count: 10; -fx-min-height: 180;"
                                      prefRowCount="9">
                                <text>
                                    <![CDATA[
add: Adds a tenant to TenantTrack.

Parameters:
g/ GIVEN NAME
f/ FAMILY NAME
p/ PHONE
e/ EMAIL
a/ ADDRESS
[t/TAG]...

Example:
add g/ John f/ Doe p/ 98765432 e/ johndoe@email.com
a/ 21 Lower Kent Ridge Rd, 119077 t/ hdb t/ landed
                    ]]>
                                </text>
                            </TextArea>

                            <!-- ðŸ“ Archive Command -->
                            <Label text="ðŸ“ Archive Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true" style="-fx-font-family: monospace;
                            -fx-font-size: 13px; -fx-pref-row-count: 10; -fx-min-height: 180;"
                                      prefRowCount="6">
                                <text>
                                    <![CDATA[
archive: Archives the tenant identified by the index number
used in the displayed tenant list.

Parameters:
INDEX (must be a positive integer)

Example:
archive 1
                    ]]>
                                </text>
                            </TextArea>

                            <!-- ðŸ§¹ Clear Command -->
                            <Label text="ðŸ§¹ Clear Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                       -fx-min-height: 180;"
                                      prefRowCount="2">
                                <text>
                                    <![CDATA[
clear: Clears all tenants from the address book.
                    ]]>
                                </text>
                            </TextArea>

                            <!-- ðŸ› ï¸ Delete Command -->
                            <Label text="ðŸ› ï¸ Delete Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                      -fx-min-height: 180;"
                                      prefRowCount="6">
                                <text>
                                    <![CDATA[
delete: Deletes the tenant identified by the index number
used in the displayed tenant list.

Parameters:
INDEX (must be a positive integer)

Example:
delete 1
                    ]]>
                                </text>
                            </TextArea>

                            <!-- ðŸ“ Edit Command -->
                            <Label text="ðŸ“ Edit Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true" style="-fx-font-family: monospace;
                            -fx-font-size: 13px; -fx-pref-row-count: 10; -fx-min-height: 180;"
                                      prefRowCount="9">
                                <text>
                                    <![CDATA[
edit: Edits the details of the tenant identified by the index number
used in the displayed tenant list.

Parameters:
INDEX (must be a positive integer)
[g/ GIVEN NAME]
[f/ FAMILY NAME]
[p/ PHONE]
[e/ EMAIL]
[a/ ADDRESS]
[t/ TAG]...

Example:
edit 1 p/91234567 e/johndoe@example.com
                    ]]>
                                </text>
                            </TextArea>

                            <!-- ðŸ›‘ Exit Command -->
                            <Label text="ðŸ›‘ Exit Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                      -fx-min-height: 180;"
                                      prefRowCount="2">
                                <text>
                                    <![CDATA[
exit: Exits the application.
                    ]]>
                                </text>
                            </TextArea>

                            <!-- ðŸ§² Filter Command -->
                            <Label text="ðŸ§² Filter Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                      -fx-min-height: 180;"
                                      prefRowCount="7">
                                <text>
                                    <![CDATA[
filter: Filters all tenants whose addresses contain any of the specified
keywords (case-insensitive). Displays them in a list.

Parameters:
KEYWORD [MORE_KEYWORDS]...

Example:
filter Kent Ridge
                    ]]>
                                </text>
                            </TextArea>

                            <!-- ðŸ”Ž Find Command -->
                            <Label text="ðŸ”Ž Find Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px;
                                            -fx-min-height: 180"
                                      prefRowCount="7">
                                <text>
                                    <![CDATA[
                                    find: Finds all tenants whose names contain any of the specified keywords
                                    (case-insensitive). Displays them in a list.
                                    Parameters:
                                    KEYWORD [MORE_KEYWORDS]...
                                    Example:
                                    find alice bob charlie
                                    ]]>
                                </text>
                            </TextArea>


                            <!-- ðŸ“– Help Command -->
                            <Label text="ðŸ“– Help Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true"
                                      style="-fx-font-family: monospace; -fx-font-size: 13px; -fx-pref-row-count: 10;
                                      -fx-min-height: 180;"
                                      prefRowCount="3">
                                <text>
                                    <![CDATA[
help: Shows program usage instructions.

Example:
help
                    ]]>
                                </text>
                            </TextArea>

                            <!-- ðŸ“‹ List Command -->
                            <Label text="ðŸ“‹ List Command" style="-fx-font-weight: bold;"/>
                            <TextArea editable="false" wrapText="true" style="-fx-font-family: monospace;
                            -fx-font-size: 13px; -fx-pref-row-count: 10; -fx-min-height: 180;"
                                      prefRowCount="2">
                                <text>
                                    <![CDATA[
